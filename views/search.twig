{% extends ['page.twig'] %}

{% set resultsId = resultsId|default(option.google_cse_id) %}

{% block content %}
{{ parent() }}

<article class="miz-main-grid__article">
	{% if resultsId %}
	<gcse:search gname="sitesearch" queryParameterName="q"></gcse:search>
	{% else %}
	<p>You did not provide a Google Custom Search Engine ID. Please provide one to use the GCSE.</p>
	{% endif %}
</article>
{% endblock %}
