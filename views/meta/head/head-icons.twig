{# Favicon #}
<link rel="shortcut icon" href="{{ metaData.url.asset }}assets/images/favicon.ico" />

{# Apple Touch Icons #}
<meta name="apple-mobile-web-app-title" content="{{ metaData.short_name }}" />
<link rel="mask-icon" href="{{ metaData.url.asset }}assets/images/icons/pinned-site/apple-pinned-site.svg" color="{{ metaData.icons.apple }}">
<link rel="apple-touch-icon-precomposed" href="{{ metaData.url.asset }}assets/images/icons/pinned-site/site-icon-{{ metaData.icons.color }}-76x76.png" />
<link rel="apple-touch-icon-precomposed" sizes="120x120" href="{{ metaData.url.asset }}assets/images/icons/pinned-site/site-icon-{{ metaData.icons.color }}-120x120.png" />
<link rel="apple-touch-icon-precomposed" sizes="152x152" href="{{ metaData.url.asset }}assets/images/icons/pinned-site/site-icon-{{ metaData.icons.color }}-152x152.png" />
<link rel="apple-touch-icon-precomposed" sizes="180x180" href="{{ metaData.url.asset }}assets/images/icons/pinned-site/site-icon-{{ metaData.icons.color }}-180x180.png" />

{#  Microsoft Windows 8+ Tiles #}
<meta name="application-name" content="{{ metaData.short_name }}" />
<meta name="msapplication-TileImage" content="{{ metaData.url.asset }}assets/images/icons/pinned-site/microsoft-pinned-site.png" />
<meta name="msapplication-TileColor" content="{{ metaData.icons.ms }}" />
