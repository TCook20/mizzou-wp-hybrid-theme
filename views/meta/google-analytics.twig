{% if ((metaData.url.detected_hostname == metaData.url.hostname) and (metaData.google.analytics)) and not (user) %}

<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id={{ metaData.google.analytics }}"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', '{{ metaData.google.analytics }}');
</script>

{% endif %}
