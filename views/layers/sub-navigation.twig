{% set subNavMenu = subNavMenu|default(flexgroup.sub_navigation.slug) %}

{% if option.sub_nav_color %}
    {% set sub_nav_modifier_class = ('navigation--sub-navigation navigation--sub-navigation--' ~ option.sub_nav_color) %}
{% else %}
    {% set sub_nav_modifier_class = navigation_modifier_class|default('navigation--sub-navigation') %}
{% endif %}
  
{% filter shortcodes %}
  [menu slug="{{ subNavMenu }}" class="{{ sub_nav_modifier_class }}"]
{% endfilter %}